<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listar desconto</title>
    <link rel="stylesheet" href="../public/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>
<body>
    <header class="header">
        <div class="ha">
            <h1>Perentino</h1>
        <a href="home.html"><button class="btn btn-light">Home</button></a>
        <a href="listcupons.html"><button class="btn btn-light">Cupons</button></a>
        <a href="listdesconto.html"><button class="btn btn-light">Descontos</button></a>
        <a href="listskins.html"><button class="btn btn-light">Skins</button></a>
        <a href="listvendas.html"><button class="btn btn-light">Vendas</button></a>
        <a href="logar.html"><button class="btn btn-light m-5">Sair</button></a>
         </div>
    </header>
    <main>
        <h2>Listando desconto</h2>
        <section class="list">
            <div class="row">
                <a href="/desconto"><button class="btn bg-danger">Cadastrar desconto</button></a>
            </div>
    
            <% if (descontoDAO && descontoDAO.length > 0) { %>
                <!-- Iterar sobre descontoDAO apenas se estiver definido e contiver dados -->
                <% for (let Desconto of descontoDAO) { %>
                    <div class="row border border-1 border-warning rounded m-2 p-1 d-flex">
                        <div class="col border-end d-flex justify-content-center align-self-center">
                            <%= JSON.stringify(Desconto) %>
                        </div>
                    
                    
                    <div class="col border-end d-flex justify-content-center align-self-center"><div class="col border-end d-flex justify-content-center align-self-center">
                        <button class="btn bg-success" onclick="atualizar(<%= Desconto.id_desconto %>)">
                            <i class="bi bi-pen"></i> Update
                        </button>
                    </div>
                    </div>
                    <div class="col d-flex justify-content-center align-self-center"><button onclick="apagar(<%= Desconto.id_desconto %>)" class="btn bg-danger"><i class="bi bi-trash3"></i> Delete</button></div>
                </div>
                <% } %>
            <% } else { %>
                <p>Nenhum desconto encontrado.</p>
            <% } %>
    
        </section>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script>
      async function apagar(id) {
    const resposta = await fetch(`/desconto/apagar/` +id, { method: 'DELETE' });
    const json = await resposta.json();
    const status = await json;

    console.log(status);

    location.reload();
}
function atualizar(id){
            location.href = "/desconto/alterar/"+id

            }      

    </script>
        
</body>
</html> 