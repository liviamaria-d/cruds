<body>
    <header class="header">
        <div class="ha">
            <h1>Perentino</h1>
        <a href="home.html"><button class="btn btn-light">Home</button></a>
        <a href="listcupons.html"><button class="btn btn-light">Cupons</button></a>
        <a href="listdesconto.html"><button class="btn btn-light">Descontos</button></a>
        <a href="listskins.html"><button class="btn btn-light">Skins</button></a>
        <a href="listvendas.html"><button class="btn btn-light">Vendas</button></a>
        <a href="logar.html"><button class="btn btn-light m-5">Sair</button></a>
         </div>
    </header>
    <main>
        <h2>Listando Cupons</h2>
        <section class="list">
            <div class="row">
                <a href="/cupom"><button class="btn bg-danger">Cadastrar cupom</button></a>
            </div>
           
            <% for(let cupoms of cupom){  %>

                <!-- Inicio do loop de dados -->
                <div class="row border border-1 border-warning rounded m-2 p-1 d-flex ">
                    <div class="col border-end d-flex justify-content-center align-self-center"><%= cupoms.nome %> </div>
                    <div class="col border-end d-flex justify-content-center align-self-center"><%= cupoms.Codigo %></div>
                    <div class="col border-end d-flex justify-content-center align-self-center"><%= cupoms.validade %></div>
                    <div class="col border-end d-flex justify-content-center align-self-center"><%= cupoms.valor %></div>
                    <div class="col border-end d-flex justify-content-center align-self-center"><button onclick="atualizar('<%= cupoms.id %>')" class="btn bg-success"><i class="bi bi-pen"></i>  Update</button></div>
                    <div class="col d-flex justify-content-center align-self-center"><button onclick="apagar('<%= cupoms.id %>')" class="btn bg-danger"> <i class="bi bi-trash3"></i> Delete</button></div>
                </div>
  
              <% } %>
           
        </section>
    </main>
        <script>
                async function apagar(id){
            
            // cupom/apagar/10
            const resposta = await fetch('/cupom/apagar/'+id, { method:'DELETE' })
            const json = await resposta.json()
            const status = await json

            console.log(status)

            location.reload()
            }

            function atualizar(id){
            location.href = "/cupom/alterar/"+id

            }      

            </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    
</body>
